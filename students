int sr(int a,int b,int c,int d,int e,int f){
int sred=(a+b+c+d+e+f)/6;
return sred;
}

int stip (int a,int b,int c,int d,int e,int f){
if (a>3,b>3,c>3,d>3,e>3,f>3) cout<<"accrue a scholarship"
}

int dolg (int a,int b,int c,int d,int e,int f){
if (a<3||b<3||c<3||d<3||e<<3||f<3) cout<<"debt"
}

int srs (int n,int a,int b,int c,int d,int e,int f){
for (int i=0, i<n, i++){
s=(a+b+c+d+e+f)/6}
int max1=s[0];
for (i=0, i<n, i++){
if (s[i]>max1) max1=s[i];
}
int max2=s[0];
for (i=0, i<n, i++){
if (s[i]>max2, s[i]< max1) max2=s[i];
}
int min1=s[0];
for (i=0, i<n, i++){
if (s[i]<min1) min1=s[i];
}
int min2=s[0];
for (i=0, i<n, i++){
if (s[i]<min2, s[i]< min1) min2=s[i];
}
for (i=0, i<n, i++) {
int srs;
for (i=0, i<n, i++) {
if(a[i]!=max1||a[i]!=max2||a[i]!=min1||a[i]!=min2){
srs+=a[i];
}
srs=srs/n
}
cout<< "GPA in the classroom "<< srs;
}

int stips (int n,int a,int b,int c,int d,int e,int f){
int k=0;
for (i=0;i<n;i++){ 
if (a>3,b>3,c>3,d>3,e>3,f>3) k=k+1;
}
cout<<k<<" approved students for a scholarship";
}

int dolgs (int n,int a,int b,int c,int d,int e,int f){
int p=0;
for (i=0;i<n;i++){ 
if (a<3||b<3||c<3||d<3||e<<3||f<3)  p=p+1;
}
cout<<p<<" students with debts";
}

int ot (int n,int a,int b,int c,int d,int e,int f) {
int std=0;
for (i=0;i<n;i++){ 
int debt=0;
if (a<3) debt=debt+1;
if (b<3) debt=debt+1;
if (c<3) debt=debt+1;
if (d<3) debt=debt+1;
if (e<3) debt=debt+1;
if (f<3) debt=debt+1;
if (debt>2) std=std+1;
}
cout<< std<< " expelled students";
}




